<%= form_for @article do |f| %>

<% if @article.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@article.errors.count, "error") %> prohibited
    this article from being saved:
  </h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<form class="form-horizontal">
  <div class="form-group">
    <%= f.label :title, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %><br>
    </div>
  </div>
  <br />

  <div class="form-group">
    <%= f.label :text, class: 'col-sm-2 control-label' ,placeholder: 'Text'%>
    <div class="col-sm-10">
      <%= f.text_area :text, class: 'form-control', placeholder: 'Text' %><br>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'យល់ព្រម', class: 'glyphicon glyphicon-ok btn btn-primary' %>
      <%= link_to 'ត្រលប់', articles_path, class: 'btn btn-info' %>
    </div>
  </div>
</form>

<% end %>
