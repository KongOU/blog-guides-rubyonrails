<%= form_for([@article, @article.comments.build]) do |f| %>
<form class="form-horizontal">
  <div class="form-group">
    <%= f.label :commenter, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :commenter, class: 'form-control', placeholder: 'Title' %><br>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :body, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control', placeholder: 'Title' %><br>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'បង្កើត Comment', class: 'btn btn-primary' %>
    </div>
  </div>
</form>
<% end %>
